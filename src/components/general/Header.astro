---
import BTNPrimary from "./BTNPrimary.astro";
---

<header>
    <div class="menu-container">
        <div class="main-menu" id="myHeader">
            <div class="icons">
              <ul>
                <li><a href="/index.html"><img src="/svg/rejselyst..svg" class="logo" alt="Rejselyst logo"/></a></li>
                <li><a class="menuBTN link-text-small" href="/rejseforslag.html"> REJSEFORSLAG</a></li>
                <li><a class="menuBTN link-text-small" href="/destinationer.html"> DESTINATIONER</a></li>
                <li><a class="menuBTN" href="/kontaktos.html"><BTNPrimary data="KONTAKT OS"/></a></li>
                <li class="burger-menu"><img src="/svg/burgermenu.svg" alt="Burger-Menu" /></li>
              </ul>
            </div>
          </div>
    </div>

    <div class="overlaymenu-container">
        <div class="icons-close">
          <div class="overlayLogo">
            <li><a href="/index.html"><img src="/svg/rejselyst..svg" class="logo" alt="Rejselyst logo"/></a></li>
          </div>
          <ul class="ulicons">
              <li class="burger-menu2"><img src="/svg/burgermenu.svg" alt="Burger-Menu2" /></li>
                <div class="storMenu">
                    <li><a href="/rejseforslag.html">REJSEFORSLAG</a></li>
                    <li><a href="/omos.html">OM OS</a></li>
                    <li><a href="/destinationer.html">DESTINATIONER</a></li>
                    <li><a href="/kontaktos.html">KONTAKT OS</a></li>
              </div>
              <!-- <div class="SoMe" style="background-color: var(--dark-blue);">
                <SoMe bg="blue"/>
              </div> -->
          </ul>
          </div>
    </div>

</header>


<style>

  .overlayLogo a {
    position: absolute;
  }
    header{
    list-style-type: none;
    z-index: 1000;
  }

    .main-menu {
    display: flex;
    justify-content: space-between;
    list-style: none;
    }

    .menu-container {
        position: absolute;
        z-index: 10000;
        width: 100%;
    }
    
    body.menu-open .menu-container {
      display: none;
    }
  .icons ul {
    display: flex;
    align-items: right;
    list-style-type: none; 
  }
  .icons {
    display: flex;
  }
    .burger-menu img, .burger-menu2 img {
      /* width: 40px;
      height: 40px; */
    }

  .burger-menu,
  .burger-menu2 {
    cursor: pointer;
    transition: 0.5s ease;
  }

  .burger-menu:hover, .burger-menu2:hover {
    opacity: 0.7;
    transition: 0.5s ease;
  }

  body .open {
    transform: translateX(0);
  }

  .overlaymenu-container {
    height: 100vh;
    width: 100vw;
    background-color: var(--primary-red);
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    transform: translateX(100%);
    transition: transform 0.2s;
    z-index: 99;
  }

  .burger-menu2 {
    display: flex;
    justify-content: right;
    text-align: right;
    z-index: 2000;
  }

  .storMenu {
    display: flex;
    justify-content: left;
    flex-direction: column;
  }

  .storMenu a {
  }

  .icons-close ul {
    display: flex;
    flex-direction: column;
    list-style-type: none;
    z-index: 1000;
  }

  .storMenu a:hover {
    text-decoration: none;
    cursor: pointer;
  }

  .icons-close a {
    display: block;
    z-index: 1000;
  }

  .menuBTN {
    display: none;
    text-decoration: none;
  }


    @media screen and (min-width: 800px) {
      header {
      z-index: 1000;
      display: flex;
      width: 1440px;
      justify-content: center;
      align-items: flex-start;
      gap: var(--space-vertical-gap-large);
      }

      .menuBTN {
      display: block;
    }

    .icons-close a {
    display: block;
    z-index: 1000;
  }
  .storMenu {

  }

  .menu-container {
    width: 0%;
  }

  }

</style>

<script>
  const overlaymenu = document.querySelector(".overlaymenu-container");
  const burgermenu = document.querySelector(".burger-menu");
  const close = document.querySelector(".burger-menu2");
  const close2 = document.querySelector("section");

  const some = document.querySelector(".SoMe")

  burgermenu.addEventListener("click", function () {
    overlaymenu.classList.add("open");
    document.body.classList.add("menu-open"); 
    some.classList.toggle("blue")
  });

  close.addEventListener("click", function () {
    overlaymenu.classList.remove("open");
    document.body.classList.remove("menu-open"); 
    some.classList.toggle("blue")

  });

  close2.addEventListener("click", function () {
    overlaymenu.classList.remove("open");
    document.body.classList.remove("menu-open");
  });

  overlaymenu.addEventListener("click", function () {
    overlaymenu.classList.remove("open");
    document.body.classList.remove("menu-open"); // Add this line
  });
</script>