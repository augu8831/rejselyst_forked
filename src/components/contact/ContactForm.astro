---
import BTNPrimary from "../general/BTNPrimary.astro"
import BTNSecondary from "../general/BTNSecondary.astro"
---
<article>
    <div class="contact-grid">
        <section class="h2-contact">
            <h2 class="h2-display">Udfyld kontaktformularen</h2>
            <p class="paragraph-medium">Eller ring direkte til Matti på +45 53 80 53 59</p>
        </section>

        <section class="contact-form">
            <form action="">
                <div class="grid-container">
                    <div class="div1">
                        <input type="text" id="fname" name="fname" class="form-input paragraph-medium" value="Fornavn *">
                        <label class="formlabel" for="fname"></label>
                    </div>

                    <div class="div2">
                        <input type="text" id="lname" name="lname" class="form-input paragraph-medium" value="Efternavn *">
                        <label class="formlabel" for="lname"></label>
                    </div>

                    <div class="div3">
                        <input type="text" id="age" name="age" class="form-input paragraph-medium" value="Alder">
                        <label class="formlabel" for="age"></label>
                    </div>

                    <div class="div4">
                        <input type="text" id="email" name="email" class="form-input paragraph-medium" value="E-mail *">
                        <label class="formlabel" for="email"></label>
                    </div>

                    <div class="div5">
                        <input type="text" id="destination" name="destination" class="form-input paragraph-medium" value="Destination *">
                        <label class="formlabel" for="destination"></label>
                    </div>

                    <div class="div6">
                        <input type="text" id="phone" name="phone" class="form-input paragraph-medium" value="Telefon *">
                        <label class="formlabel" for="phone"></label>
                    </div>

                    <div class="div7">
                        <input type="text" id="airport" name="airport" class="form-input paragraph-medium" value="Foretrukken afrejselufthavn">
                        <label class="formlabel" for="airport"></label>
                    </div>

                    <div class="div8">
                        <input type="text" id="travellers" name="travellers" class="form-input paragraph-medium" value="Antal rejsende *">
                        <label class="formlabel" for="travellers"></label>
                    </div>

                    <div class="div9">
                        <input type="text" id="dates" name="dates" class="form-input paragraph-medium" value="Rejsedatoer *">
                        <label class="formlabel" for="dates"></label>
                    </div>

                    <div class="div10">
                        <input type="text" id="travellengt" name="travellengt" class="form-input paragraph-medium" value="Rejselængde *">
                        <label class="formlabel" for="travellengt"></label>
                    </div>

                    <div class="div11">
                        <input type="text" id="flexi" name="flexi" class="form-input paragraph-medium" value="Fleksibilitet *">
                        <label class="formlabel" for="flexi"></label>
                    </div>

                    <div class="div12">
                        <input type="text" id="budget" name="budget" class="form-input paragraph-medium" value="Samlet rejsebudget *">
                        <label class="formlabel" for="budget"></label>
                    </div>

                    <div class="div13">
                        <input type="text" id="comments" name="comments" class="form-input paragraph-medium" value="Bemærkninger">
                        <label class="formlabel" for="comments"></label>
                    </div>
                </div>
            </form>

        </section>
    </div>  

    <BTNPrimary data="SEND"/>
</article>

<style>

    .contact-grid {
        /* display: flex; */

    }

    form {
        display: flex;
        justify-content: center;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(7, 1fr);
        align-items: center; 
        width: 887px;
        height: 450px;
        gap: var(--space-horisontal-gap-xxlarge, 50px);
    }

    article {
        background-color: var(--surface-tertiary);
        padding: 2rem;
    }

    .div1 { grid-area: 1 / 1 / 2 / 2; }
    .div2 { grid-area: 1 / 2 / 2 / 3; }
    .div3 { grid-area: 2 / 1 / 3 / 2; }
    .div4 { grid-area: 2 / 2 / 3 / 3; }
    .div5 { grid-area: 3 / 1 / 4 / 2; }
    .div6 { grid-area: 3 / 2 / 4 / 3; }
    .div7 { grid-area: 4 / 1 / 5 / 2; }
    .div8 { grid-area: 4 / 2 / 5 / 3; }
    .div9 { grid-area: 5 / 1 / 6 / 2; }
    .div10 { grid-area: 5 / 2 / 6 / 3; }
    .div11 { grid-area: 6 / 1 / 7 / 2; }
    .div12 { grid-area: 6 / 2 / 7 / 3; }
    .div13 { grid-area: 7 / 1 / 8 / 3; } 

    .div13 {
        display: flex;
        justify-content: left;
    }
    .form-input {
        cursor: pointer;
        outline: none;
        border: none;
        background-color: transparent;
        color: var(--contact-form-text-placeholder);
        border-bottom: 1px solid var(--text-form-contact-form-text-body-color);
        width: 100%;
    }

    .h2-contact {
        /* display: flex;
        flex-direction: column; */
        padding-bottom: 4rem;
    }

</style>