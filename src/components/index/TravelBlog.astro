<style>

article {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-horisontal-gap-xlarge, 30px);
    padding-top: 130px;
    padding-bottom: 130px;
    margin: 15px;
}

.blog-img {
width: 250px;
height: auto;
}


.heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 250px;
}

.dato {
    color: var(--text-body, #2F2F2F);
/* inline-text */
font-family: "Be Vietnam Pro";
font-size: 15px;
font-style: italic;
font-weight: 400;
line-height: normal;
}

.blog-post{
    display: flex; 
    flex-direction: column;
    justify-content: center;
    gap: var(--space-vertical-gap-medium, 50px);
}

.blog-post-1 {
    display: flex;
    flex-direction: column;
    gap: 16px;
    max-width: 250px;
    align-items: center;
    text-align: left;
}

.blog-post-2 {
    display: flex;
    flex-direction: column;
    gap: 16px;
    max-width: 250px;
    text-align: left;
}

.blog-post-3 {
    display: flex;
    flex-direction: column;
    gap: 16px;
    max-width: 250px;
    align-items: center;
    text-align: left;
}

.upper {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.lower {
    display: flex;
    flex-direction: column;
    gap: var(--space-horisontal-gap-medium, 20px);

}

@media only screen and (min-width: 992px) { 

.blog-img {
width: 400px;
height: auto;

}

