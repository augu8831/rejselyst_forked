}

}

</style>


<script>

    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    
    gsap.registerPlugin(ScrollTrigger);
    
    gsap.from(".gsap-heading", {
        yPercent: 50,
        duration: 3,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".gsap-heading",
          start: "top 95%",
        end: "bottom center ",
          scrub: true,
      }
    });
    
    gsap.from(".blog-post-1", {
        yPercent: 50,
        duration: 4,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".gsap-heading",
          start: "top 70%",
        end: "bottom center ",
          scrub: true,
      }
    });

    gsap.from(".blog-post-2", {
        yPercent: 50,
        duration: 4,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".gsap-heading",
          start: "top 60%",
        end: "bottom center ",
          scrub: true,
      }
    });

    gsap.from(".blog-post-3", {
        yPercent: 50,
        duration: 4,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".gsap-heading",
          start: "top 70%",
        end: "bottom center ",
          scrub: true,
      }
    });
    
    </script>