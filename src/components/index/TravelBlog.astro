    display: flex; 
    flex-direction: row;
    justify-content: center;
    gap: var(--space-vertical-gap-medium, 50px);
}

.blog-post-1 {
    display: flex;
    flex-direction: column;
    gap: 16px;
    max-width: 400px;
    align-items: flex-start;
}

.blog-post-2 {
